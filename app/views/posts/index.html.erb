<div class="container">
  <div class="row">
    <div class="col-12 col-md-8">
      
      <% @posts.each do |post| %>
      <div class="card">
        <div class="card-body"> 
          <h5 class="card-title"><%= link_to post.title, post %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= post.user.email %></h6>
          <%post.tags.split(',').each do |tag| %>
            <span class="badge bg-success"><%=tag %></span>
            <% end %>
          <p class="card-text"> <%= post.content %></p>
          <%= link_to "Editar", edit_post_path(post) %> 
<!--             class:"class="fa-solid fa-pen-to-square" -->
          <%= link_to "Apagar", post, data:{method: :delete, confirm: "Você tem certeza?"} %>
        
        
        </div>
      </div>
        <% end %> 
    </div>
    
    <div class="col-12 col-md-4">
      <%= link_to "Novo Post", :new_post, class: "btn btn-warning w-100 " %>
      <hr>
        <div class="card">
          <div class="card-body">
            
            <h5 clas="card-title">Sobre o app</h5>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  
                <div class="input-group has-validation">
                   <div class="form-floating is-invalid">
                    <input type="text" class="form-control id="floatingInputGroup2" placeholder="Pesquise uma publicação" required>
                    <label for="floatingInputGroup2">Pesquise uma publicação</label>
                   </div>
                </div></li>

                <li class="list-group-item">Este aplicativo foi desenvolvido durante a semana de workshop de Ruby on Rails com os alunos do Senai Taubaté</li>
                <li class="list-group-item"><%= @users_count %> Usuários</li>
                <li class="list-group-item"><%= @posts_count %> Publicações</li>
              </ul>




              
            
          </div>
        </div>

        <br>


      <div class="card">
        <div class="card-body">
          
          <h5 clas="card-title">Você conhece essas pessoas?</h5>
          <hr>
          <%= @users.each do |user|%>
          <span> <%= user %></span>

          <% end %>
            
          
        </div>
  
 
      
    </div>
  </div>
</div>



  
   
